
<div class="col-12">
  <div class="col-md-6 text-center">
    <h2>{{title}}</h2>
    <p>Posted by {{user.username}} | Date: {{postdate}}</p>
  </div>
    <div class="col-md-6 text-center">
    <p>{{content}}</p>
    <p>{{videoLink}} or {{relatedLink}}</p>
    <button class="btn btn-primary">Post My Story</button>
  </div>
</div>

<hr>

<!-- For loop to display list of stories posted in database -->
{{#each post as |post|}}
<div class="row mb-4 post"</div>
    <div class="col-md-5">
      <h2><a href="/post/{{post.id}}">{{post.title}}</a></h2>
      <p>Posted by: {{post.username}} on {{post.postdate}}</p>
    </div>
    <div class="col-md-7">
      {{post.content}}
      <hr>
    </div>
 </div> 
 {{/each}}

